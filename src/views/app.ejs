<!doctype html>
<html lang="ja">
   <head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1">

      <title>Simple-perceptron Demo</title>
      <link href="./css/bootstrap.min.css" rel="stylesheet">
      <script src="./js/jquery.js"></script>
      <script src="./js/bootstrap.min.js"></script>
   </head>
   <body>
      <div class="container">
         <p class="lead">Simple-perceptron Demo</p>
         <form name="filter" method="post">
            <div class="form-group">
               <label for="document">Text for classify（※）</label>
               <% if (method === 'POST' && (post === '' || post === undefined)) { %>
                  <div class="alert alert-danger" role="alert">Text can't be blank!!</div>
               <% } %>
               <textarea name="document" cols="70" rows="8" class="form-control" id="document" placeholder="please input text"></textarea>
            </div>
            <div class="form-group">
               <button name="btn_submit" class="btn btn-success btn-lg" value="filter"><b>Submit</b></button>
            </div>
         </form>
         <% if (result !== '') { %>
            <p class="lead">class：<%= result %></p>
         <% } %> 
      </div>
   </body>
</html>